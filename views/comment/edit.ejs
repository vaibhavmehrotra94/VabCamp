<% include ../partials/head%>
    <div class="container ">
        <div class="row">    
            <h1><center>Edit Your Comment for <%= camp.name %><center></h1>
            <div class="generic-form">    
                <form action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?__method=PUT" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" name="comment[text]" rows="6" required><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Update</button>
                    </div>
                    <a href="/campgrounds/<%= camp._id %>">Go Back</a>
                </form>
            </div>
    
        </div>
    </div>
<% include ../partials/foot%>