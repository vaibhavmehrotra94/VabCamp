<% include ../partials/head%>
    <div class="container ">
        <div class = "row" style="margin-top:40px">    
            <h1 style="text-align:center;">Create New Comment for <%= camp.name %></h1>
            <div style="width:50%; margin:30px auto;">    
                <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
                    
                    <div class="form-group">
                        <textarea class="form-control" name="comment[text]" rows="6" placeholder="Comment goes here.." required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Add</button>
                    </div>
                    <a href="/campgrounds/<%= camp._id %>">Go Back</a>
                </form>
            </div>
    
        </div>
    </div>
<% include ../partials/foot%>