<% include ../partials/head %>
<div class="container ">
    <div class="row">    
        <h1 style="text-align:center;">Create a new CampGround</h1>
        <div class="generic-form">    
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image Url" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" id="location" placeholder="Dudhwa National Park, Lakhimpur">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price/Night in Rs" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="content" rows="6" placeholder="Content goes here.." required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Add</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>

    </div>
</div>
<% include ../partials/foot %>