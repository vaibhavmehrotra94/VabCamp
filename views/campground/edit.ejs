<% include ../partials/head %>
<div class="container ">
    <div class = "row" style="margin-top:40px">    
        <h1 style="text-align:center;">Edit CampGround</h1>
        <div class="generic-form">    
            <form action = "/campgrounds/<%= camp._id %>?__method=PUT" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= camp.price %>" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="camp[content]" rows="6"  required><%= camp.content %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Save</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>

    </div>
</div>

<% include ../partials/foot %>